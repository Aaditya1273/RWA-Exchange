{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "scripts/**/*",
    "test/**/*",
    "contracts/**/*",
    "hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*"
  ]
}
